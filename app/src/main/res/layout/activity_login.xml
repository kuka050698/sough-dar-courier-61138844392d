<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kz.darlogistics.courier.auth.login.LoginActivity"
    android:background="@drawable/login_bg">

    <TextView
        android:id="@+id/title_id_dar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="60dp"
        android:text="DAR"
        android:textColor="#F3114A"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title_id_logistics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="60dp"
        android:text="Logistics"
        android:textColor="#9B9B9B"
        android:textSize="50sp"
        app:layout_constraintLeft_toRightOf="@id/title_id_dar"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/sign_in_text_view"
        app:layout_constraintTop_toBottomOf="@id/title_id_dar"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enter"
        android:textColor="#fff"/>

    <EditText
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/sign_in_text_view"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/login_view_email_edit_text"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#fff"
        android:hint="@string/email"/>
        <!--<com.scottyab.showhidepasswordedittext.ShowHidePasswordEditText-->
            <!--app:layout_constraintRight_toRightOf="parent"-->
            <!--android:layout_marginTop="15dp"-->
            <!--android:layout_marginBottom="8dp"-->
            <!--android:layout_marginStart="10dp"-->
            <!--android:layout_marginEnd="10dp"-->
            <!--app:layout_constraintTop_toBottomOf="@id/login_view_email_edit_text"-->
            <!--android:id="@+id/login_view_password_edit_text"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="45dp"-->
            <!--android:background="#fff"-->
            <!--android:hint="Пароль"-->
            <!--android:inputType="textPassword"-->
            <!--android:paddingLeft="12dp"-->
            <!--app:drawable_hide="@drawable/ic_visibility_off_black_24dp"-->
            <!--app:drawable_show="@drawable/ic_visibility_black_24dp"-->
            <!--app:tint_color="#fff" />-->

    <Button
        android:onClick="onClickLogin"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/login_view_email_edit_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="17sp"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:text="@string/signin"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="#EE194D"
        android:id="@+id/login_view_login_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="35dp"
        android:id="@+id/login_view_restore_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/restore"
        android:textColor="#fff"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="17sp"
        app:layout_constraintTop_toBottomOf="@id/login_view_login_button"/>
    <TextView
        android:onClick="onClickRestorePasswordAction"
        android:layout_marginTop="15dp"
        android:id="@+id/login_view_restore_password_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/restore_password"
        android:textColor="#fff"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="17sp"
        app:layout_constraintTop_toBottomOf="@id/login_view_restore_password"/>
    <Button
        app:layout_constraintBottom_toBottomOf="parent"
        android:onClick="onClickRegister"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/login_view_restore_password_action"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/login_view_sign_up_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Регистрация"
        android:textAllCaps="false"
        android:textColor="#EE194D"
        android:textSize="15sp"
        app:layout_constrainedWidth="true"
        />
</android.support.constraint.ConstraintLayout>
